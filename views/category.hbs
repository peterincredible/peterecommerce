<div class="container-fluid fullheight" style="padding:0;">
    <div class="row header"style="margin:0;">
        {{>header2}}
    </div>
    <div class="row content" style="margin:0;">
        <div class="col-md-6 col-md-offset-3" style="margin-top:25px;">
            <a class="btn btn-primary" href="/admin/add-category">Add Category</a>
            {{#if mycat}}
            <table class="table table-striped">
                <thead>
                    <th><b>Category Name</b></th>
                    <th><b>Edit</b></th>
                    <th><b>Delete</b></th>
                </thead>
                <tbody>
                    {{#each mycat}}
                        <tr>
                            <td><b>{{name}}</b></td>
                            <td><b><a href="/admin/edit-category/{{_id}}" class="text-primary">Edit</a></b></td>
                            <td><b><a href="/admin/delete-category/{{_id}}"class="text-danger" >Delete</a></b></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
                
            {{/if}}
            {{#unless mycat}}
                <p><b>There is no Category in the Database</b></p>
            {{/unless}}
        </div>
    </div>
    <div class="row bg-primary footer" style=" width:100%; margin-left:0px;margin-right:0px;">
        {{>footer}}
    </div>

</div>