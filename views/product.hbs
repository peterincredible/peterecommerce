<div class="flex-container rm-padding-lr">
    <div class="row flex-header rm-margin-lr">
        <div class="col-md-12 rm-padding-lr">
            {{>header2}}
        </div>
    </div>
    <div class="row flex-content rm-margin-lr">
        {{#if success}}
        <div class="col-md-8 col-md-offset-2">
            <p class="bg-primary text-center text-dark">{{success}}</p>
        </div>
        {{/if}}
        <div class="col-md-8 col-md-offset-2">
            <a class="btn btn-primary" href="/admin/add-product">Add Product</a>
        </div>
        <br/>
        <br/>
        <div class="col-md-8 col-md-offset-2">
            <!--<div class="table-responsive">-->
                {{#if product}}
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                         <tr>
                             <th class="text-center">Name</th>
                             <th class="text-center">Category</th>
                             <th class="text-center">Image</th>
                             <th class="text-center">Description</th>
                             <th class="text-center">Price</th> 
                             <th class="text-center" colspan=2>Actions</th> 
                        </tr>
                    </thead>     
                     <tbody>
                        {{#each product}}
                            <tr style="vertical-align: middle;">
                                <td class="text-center">{{this.name}}</td>
                                <td class="text-center">{{this.category}}</td>
                                <td class="text-center"><img src="images/{{this._id}}/{{this.image}}" style="width:50px;height:50px;" alt="no image"></td>
                                <td class="text-center">{{this.description}}</td>
                                <td class="text-center">{{this.price}}</td>
                                <td colspan="2" style="text-align:center;">
                                    <a href="/admin/delete-product/{{this._id}}" class="text-primary">delete</a>
                                    <a href="/admin/edit-product/{{this._id}}"class="text-primary">edit</a>
                                </td>
                        
                             </tr>
                        {{/each}}
                     </tbody>
                </table>
         {{/if}}
    {{#unless product}}
    <div class="col-md-6 col-md-offset-3">
         <p class="container-fluid bg-danger text-center">No Product available</p>
    </div>
    
    {{/unless}}

          <!--  </div>-->
            
        </div>
    </div>
    
    <div class="row flex-footer rm-margin-lr">
            {{>footer}}
    </div>
</div>

