<div class="flex-container rm-padding-lr">
    <div class="row flex-header rm-margin-lr">
        {{>header2}}
    </div>
    <div class="row content" style="margin-top:60px;">
        <div class="col-md-6 col-md-offset-3 ">
                <a class="btn btn-primary" href="/admin/category">Back To Category</a>
                <form action="/admin/edit-category/{{category._id}}" method="POST">
                    <div class="form-group">
                        <label class="control-label"><b>  Edit Category Name</b></label>
                        <div class="form-input">
                            <input type="text" name="name" value="{{category.name}}" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input">
                            <input type="submit" class="btn btn-primary"/>
                        </div>
                    </div>
                </form>
        </div>
    </div>
    <div class="row flex-footer rm-margin-lr>
        {{>footer}}
    </div>
</div>