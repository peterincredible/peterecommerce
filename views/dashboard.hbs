<div class="flex-container" style="padding:0px;">
    <div class="row header rm-margin-lr">
        {{>header2}}
    </div>
    <div class="row flex-content rm-margin-lr">
        <div class="col-md-8 col-md-offset-2">
            <h1 style="text-align: center;">Your  Dashboard</h1>
        </div>
        <div class="col-xs-12 col-sm-8 col-sm-offset-2"style="margin-top:10px;">
            <div class="row">
                <div class="col-sm-4 rm-padding-lr">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Account Settings</h3>
                        </div>
                        <div class="panel-body">
                            <p><a href="/user/edit-profile/{{user._id}}" style="color:black;">Edit Profile</a></p>
                            <p><a href="/user/change-password" style="color:black;">Change Password</a></p>
                            <p><a href="#" style="color:black;">Change Profile Picture</a></p>
                            <p><a href="#" style="color:black;"data-toggle="modal" data-target="#flipFlop">Delete Account</a></p>
                         </div>
                    </div>
                    <!--just testing modal-->
                        <!-- The modal -->
                    <div class="modal fade" id="flipFlop" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title" id="modalLabel">Account</h4>
                                </div>
                                <div class="modal-body">
                                    <h3><b>Are you sure you want to delete your account?</b></h3>
                                </div>
                                <div class="modal-footer">
                                    <a class="btn btn-danger btn-lg" href="/user/delete-account/{{user._id}}">Yes</a>
                                    <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">No</button>
                                    

                                </div>
                            </div>
                        </div>
                    </div>

                    <!--end of testing modal-->

                </div>
                <div class="col-sm-8" >
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><b>Orders</b></h3>
                        </div>
                        <div class="panel-body">
                                 <a href="/user/orders/finished_orders" style="color:black;" class="btn btn-default btn-sm add-margin-bottom"><b>Finished Orders ({{order_finished}})</b></a>
                                 <a href="/user/orders/cancelled_orders" style="color:black;" class="btn btn-default btn-sm add-margin-bottom"><b>Cancelled Orders ({{order_cancelled}})</b></a>
                                 <a href="/user/orders/pending_orders" style="color:black;" class="btn btn-default btn-sm add-margin-bottom"><b>Pending Orders ({{order_inprogress}})</b></a> 
                         </div>
                    </div>
                     <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row" style="vertical-align:center'">
                                   <div class="col-md-4 col-md-push-8">
                                        <a href="/user/investment-page" style="color:black;"><b>Your Investment</b></a>
                                    </div>
                                    <div class="col-md-8 col-md-pull-4">
                                         <h3 class="panel-title"><b>Investment Packages</b></h3>
                                    </div>
                                    
                            </div>
                           
                        </div>
                        <div class="panel-body">
                            {{#if packages}}
                                {{#each packages}}
                                <a href="/user/package-investment/{{_id}}" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>&#x20a6;{{volume}}</b></a>
                                {{/each}}
                                {{else}}
                                <p>no packages volume available</p>
                            {{/if}}
                         </div>
                    </div>
                    {{#if admin}}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Admin</h3>
                        </div>
                        <div class="panel-body">
                             <a href="/admin/make-user-admin" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>Make User Admin</b></a>
                            <a href="/admin/delete-user" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>Delete User</b></a>                    
                            <a href="/admin/product" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>Products</b></a>
                            <a href="/admin/category" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>Categories</b></a>
                            <a href="/user/orders" style="color:black;"class="btn btn-default btn-sm add-margin-bottom"><b>Orders</b></a>
                            <a href="/admin/packages" style="color:black;" class="btn btn-default btn-sm add-margin-bottom"><b>Packages</b></a>
                        </div>
                    </div>
                {{/if}}
                </div>
                
            </div>
        </div>
    </div>
    <div class="row flex-footer rm-margin-lr">
        <div class="col-xs-12 col-md-12">
            {{>footer}}
        </div>
        
    </div>
</div>