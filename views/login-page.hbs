<div class="container-fluid" style="padding-left:0px;padding-right:0px;">
    <div class="row" style="margin-left:0px; margin-right:0px;">
        <div class="col-md-12 col-sm-12" style="margin-left:0px; margin-right:0px; padding-left:0px;padding-right:0px;">
            {{>header2}}
        </div>
    </div>
    <div class="row registration-height" style="margin-left:0px; margin-right:0px;">
        <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3" style="margin-top:140px; background-color:rgb(192, 200, 209);">
            <form class="form-horizontal" method="Post" action="/user/signin">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="form-group ">
                    <div class="col-md-offset-2 col-md-10"> <h3><b>Sign In</b></h3></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <label for="username" class="control-label">Username</label>
                    </div>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" class="form-control" name="username" id="username" placeholder="username"/>
                        </div>
                    </div>
                </div>
                 <div class="form-group">
                    <div class="col-sm-2">
                        <label for="password" class="control-label">Password</label>
                    </div>
                    <div class="col-sm-10">
                        <div class="input-group">
                             <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                             <input type="password" class="form-control" name="password" id="password" placeholder="password"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row bg-primary bottom" style="bottom:0px; right:0px; width:100%; margin-left:0px;margin-right:0px;">
        <div class="col-sm-12">{{>footer}}</div>
    </div>
</div>