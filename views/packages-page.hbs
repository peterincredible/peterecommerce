<div class="flex-container rm-padding-lr" >
    <div class="row flex-header rm-margin-lr">
        <div class="col-md-12 rm-padding-lr">
            {{>header2}} 
        </div>
    </div>
    <div class="row flex-content rm-margin-lr">
        {{#if success}}
        <div class="col-md-8 col-md-offset-2">
            <p class="bg-primary text-center text-dark">{{success}}</p>
        </div>
        {{/if}}
        <div class="col-md-8 col-md-offset-2">
            <a class="btn btn-primary" href="/admin/add-package">Add Packages</a>
        </div>
        <br/>
        <br/>
        <div class="col-md-8 col-md-offset-2">
            <!--<div class="table-responsive">-->
                {{#if packages}}
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                         <tr>
                             <th class="">Packages</th>
                        </tr>
                    </thead>     
                     <tbody>
                        {{#each packages}}
                            <tr style="">
                                <td class="">{{volume}}</td>        
                             </tr>
                        {{/each}}
                     </tbody>
                </table>
         {{/if}}
    {{#unless packages}}
    <div class="col-md-6 col-md-offset-3">
         <p class="container-fluid bg-danger text-center">No Packages available</p>
    </div>
    
    {{/unless}}

          <!--  </div>-->
            
        </div>
    </div>
    
    <div class="row flex-footer rm-margin-lr">
            {{>footer}}
    </div>
</div>

