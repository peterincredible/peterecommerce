<div class="container-fluid fullheight"style="padding:0;">
    <div class="row header"style="margin:0;">
        {{>header2}}
    </div>
    <div class="row content" style="margin-top:10px; margin-left:0;margin-right:0;">
        <div class="col-md-6 col-md-offset-3 ">
                <a class="btn btn-primary" href="/admin/category">Back To Category</a>
                <form action="/admin/add-category" method="POST">
                    <div class="form-group">
                        <label class="control-label"><b> Add A Category Name</b></label>
                        <div class="form-input">
                            <input type="text" name="name" placeholder="name of new category" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input">
                            <input type="submit" class="btn btn-primary"/>
                        </div>
                    </div>
                </form>
        </div>
    </div>
    <div class="row bg-primary footer" style="width:100%; margin-left:0px;margin-right:0px;">
        {{>footer}}
    </div>
</div>