<div class="flex-container rm-padding-lr" >
    <div class="row flex-header rm-margin-lr">
        <div class="col-md-12">
            {{>header2}}
        </div>
    </div>
    <div class="row flex-content">
        <div class="col-md-8 col-md-offset-2" >
            <h2><b>Your Investment</b></h2>
            {{#if yourinvestment}}
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th style="text-align:center;">Package Invested</th>
                            <th style="text-align:center;">Time</th>
                            <th style="text-align:center;">Time for Maturity</th>
                        </tr>
                    </thead>
                    <tbody>
                         {{#each yourinvestment}}
                            <tr>
                                <td>{{volume}}</td>
                                <td>{{time}}</td>
                                <td>still working on it</td>
                            </tr>
                         {{/each}}
                    </tbody>
                </table>
            {{else}}
            <div>you dont have any investment</div>
            {{/if }}
        </div>
              
    </div>
    
    <div class="row flex-footer rm-margin-lr" >
            {{>footer}}
    </div>
</div>

