<div class="flex-container rm-padding-lr">
    <div class="row flex-header rm-margin-lr">
        {{>header2}}    
    </div>
    <div class="row flex-content rm-margin-lr">
        <div class="col-md-8 col-md-offset-2">
            <div class="row">
                <div class="col-md-5 col-xs-5 "><img src="/images/{{product._id}}/{{product.image}}"/></div>
                <div class="col-md-7 col-xs-7">
                    <h2>{{product.name}}</h2>
                    <p>{{product.description}}</p>
                    <span class="push-left"><b>&#8358;</b>{{product.price}}</span>
                    <a href="/cart/product/add-to-cart/{{product._id}}" class="btn btn-primary pull-right">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row flex-footer rm-margin-lr" >
        <div class="col-md-12">{{>footer}}</div>
    </div>
</div>