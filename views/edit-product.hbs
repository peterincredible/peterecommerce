<div class="container-fluid">
    <div class="row">
        {{>header}}
    </div>
    <div class="row">
         <div class="col-md-8 col-md-offset-2" >
                {{#if error}}
                     <div class="bg-danger text-center">{{error}}</div>
                {{/if}}
                <h1 class="text-center">Edit Product</h1>
                <form class="form-horizontal"style="position:static" method="post" enctype="multipart/form-data" action="/admin/edit-product/{{product.id}}">
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">Product Name</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" placeholder="Product Name" value={{product.name}}>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Price</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" name="price" value="{{product.price}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">category</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="category">
                                <option>none</option>
                                {{#each categories}}
                                     {{#compare name ../product.category}}
                                        <option selected>{{name}}</option>
                                        {{else}}
                                        <option>{{name}}</option>
                                     {{/compare}}
                                {{/each}}
                               
                            </select>
                        </div>
                    </div>
                <div class="form-group">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3"name="description"placeholder="describe your product">{{product.description}}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">image input</label>
                        <div class="col-sm-10">
                            <input type="file" name="image" id="myfile">
                        </div> 
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">preview Image</label>
                        <div class="col-sm-10" id="imgcontainer">
                            <img src="/images/{{product._id}}/{{product.image}}" alt="no image" style="width:100px;height:100px;">
                        </div> 
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">submit</button>
                        </div>
                    </div>
                    
                </form>
            </div>
    </div>
    <div class="row bg-primary  bottom" style="bottom:0px; right:0px; width:100%; margin-left:0px;margin-right:0px;">
        {{>footer}}
    </div>

</div>

