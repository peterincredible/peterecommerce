<div class="flex-container">
    <div class="row flex-header rm-margin-lr">
        {{>header2}}
    </div>
    <div class="row flex-content rm-margin-lr" style="margin-top:60px;">
        <div class="col-md-6 col-md-offset-3 ">
                 {{#if error}}
                   <div class="bg-danger">
                    <h3>An Error Occured Package Wasn't added to the data base</h3>
                </div>
                 {{/if}}
                <a class="btn btn-primary" href="/admin/packages">Back To Packages</a>
                <form action="/admin/add-package" method="POST">
                    <div class="form-group">
                        <label class="control-label"><b> Add A Package volume</b></label>
                        <div class="form-input">
                            <input type="text" name="name" placeholder="name of new package volume" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input">
                            <input type="submit" class="btn btn-primary"/>
                        </div>
                    </div>
                </form>
        </div>
    </div>
    <div class="row flex-footer rm-margin-lr">
        {{>footer}}
    </div>
</div>